<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appwidget_bkgnd"
    style="@style/Widget.RomanDigitalClock.AppWidget.Container"
    android:theme="@style/Theme.RomanDigitalClock.AppWidgetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center" >

    <!--
        Poor text contrast in the following TextView is irrelevant because the widget background
        specified by the applied style attribute above is semitransparent, so real text contrast
        will be determined by the device's home screen background as set by the user.
    -->

    <TextView
        android:id="@+id/appwidget_text"
        style="@style/Widget.RomanDigitalClock.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:contentDescription="@string/app_widget_description"
        android:gravity="center_horizontal|center_vertical"
        android:lines="1"
        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="8"
        android:text="@string/appwidget_text"
        android:textColor="@color/widgetText_LoOpacityBkgnd"
        android:textSize="28sp"
        android:typeface="monospace"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/appwidget_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="America/New_York"
        android:textSize="14sp" />

</LinearLayout>