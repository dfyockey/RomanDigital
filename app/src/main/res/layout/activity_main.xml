<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_bkgnd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/timedisplay_size_control"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/civ_fill"
        android:textColor="@color/black"
        android:textSize="200sp"
        android:typeface="monospace"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VisualLintOverlap,TextContrastCheck" />

    <TextView
        android:id="@+id/TimeDisplay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/clock_red"
        android:textSize="200sp"
        android:typeface="monospace"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/timedisplay_size_control"
        app:layout_constraintEnd_toEndOf="@id/timedisplay_size_control"
        app:layout_constraintStart_toStartOf="@id/timedisplay_size_control"
        app:layout_constraintTop_toTopOf="@id/timedisplay_size_control" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/SelectionMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_selection_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>