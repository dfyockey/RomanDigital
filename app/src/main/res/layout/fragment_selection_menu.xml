<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selection_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_text_color"
    android:orientation="vertical"
    tools:context=".SelectionMenu">

    <TextView
        android:id="@+id/item_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="@dimen/menu_item_margin"
        android:layout_marginLeft="@dimen/menu_item_margin"
        android:layout_marginTop="@dimen/menu_item_margin"
        android:layout_marginEnd="@dimen/menu_item_margin"
        android:layout_marginRight="@dimen/menu_item_margin"
        android:background="@color/menu_bkgnd_color"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/menu_item_horiz_padding"
        android:paddingRight="@dimen/menu_item_horiz_padding"
        android:paddingBottom="@dimen/menu_item_bottom_padding"
        android:text="@string/menuitem_settings"
        android:textColor="@color/menu_text_color"
        android:textSize="@dimen/menu_item_font_size"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/item_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="@dimen/menu_item_margin"
        android:layout_marginLeft="@dimen/menu_item_margin"
        android:layout_marginTop="@dimen/menu_item_seperator"
        android:layout_marginEnd="@dimen/menu_item_margin"
        android:layout_marginRight="@dimen/menu_item_margin"
        android:layout_marginBottom="@dimen/menu_item_margin"
        android:background="@color/menu_bkgnd_color"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/menu_item_horiz_padding"
        android:paddingRight="@dimen/menu_item_horiz_padding"
        android:paddingBottom="@dimen/menu_item_bottom_padding"
        android:text="@string/menuitem_about"
        android:textColor="@color/menu_text_color"
        android:textSize="@dimen/menu_item_font_size"
        android:textStyle="normal" />

</LinearLayout>