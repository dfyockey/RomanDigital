<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <!-- If policy isn't ignored, warning is present even after everything is done :( -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"
        tools:ignore="ForegroundServicesPolicy" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".AppClass"
        android:allowBackup="true"
        android:icon="@mipmap/rd_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/rd_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RomanDigitalClock" >
        <receiver
            android:name=".TimeDisplayWidget"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
                <action android:name="android.intent.action.TIME_SET" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/time_display_widget_info" />
        </receiver>

        <receiver
            android:name=".BootCompletedBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!--
            Service passes an application-defined intent to a Roman numeral digital clock appwidget
            to trigger updating its time display upon receipt of each Intent.ACTION_TIME_TICK. A
            TextClock widget cannot be used for this appwidget because its time display can be
            modified to neither display the Roman numeral display nor that display's distinct time
            separators corresponding to AM and PM. This is, therefore, a use case which is both
            necessary for the operation of the appwidget's time display and not a fit for any of
            the standard use cases.
        -->
        <service
            android:name=".TimeTickRelay"
            android:description="@string/relay_service_description"
            android:exported="false"
            android:foregroundServiceType="specialUse" >
            <property android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="RELAY"/>
        </service>

        <activity
            android:name=".WidgetSettingsActivity"
            android:exported="false"
            android:label="@string/title_widget_settings"
            android:theme="@style/Theme.Settings"
            android:autoRemoveFromRecents="true"
            android:taskAffinity="">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:exported="false"
            android:label="@string/title_activity_about"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Settings" />
        <activity
            android:name=".AppSettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.Settings" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>